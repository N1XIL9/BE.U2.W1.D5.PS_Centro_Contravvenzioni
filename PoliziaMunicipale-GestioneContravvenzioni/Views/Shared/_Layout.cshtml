<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Polizia Municipale</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding: 0px; background-color: #f7f9f8;">
    <div class="body-without-footer" style="margin:0px; padding:0px;">
        <div class="text-center bg-primary">
            @*<img src="/Content/img/polizia.png"  style="width:600px"/>*@
            <a style="font-size:50px; padding:20px; font-style:italic; color:white; text-decoration: none; filter: drop-shadow(0px 0px 4px black)" href="~/">POLIZIA DI STATO</a>
         </div>
        <div class="navbar navbar-inverse">
            <div  style="display:flex; justify-content: center">
                <div class="navbar-header">
                    @*<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>*@
                    @Html.ActionLink("Contravvenzioni", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "filter: drop-shadow(0px 0px 1px #023381)" })
                </div>

                    @*<div class="dropdown">
                        <div class="dropdown-toggle" style="color:white; position: absolute; top: 15px" data-toggle="dropdown">Archivio</div>*@
                        <ul class="nav navbar-nav row " style="background-color:white; border-radius: 10px;">
                            <li>@Html.ActionLink("Trasgressori", "Lista", new { controller = "Trasgressore" }, new { @style = "color:black;" })</li>
                            <li>@Html.ActionLink("Verbali", "Lista", new { controller = "Verbale" }, new { @style = "color:black" })</li>
                        </ul>
                    @*</div>*@

            </div>
        </div>
    </div>
    <div class="container table-bordered img-rounded bg-info" style="min-height: 80vh; box-shadow: 0px 0px 10px #023381 ">
        @RenderBody()
    </div>
    <div class="container-fluid text-center bg-primary" style="margin-top: 20px; padding: 20px; color: white; border-top: 10px solid #292b2c; ">
        <footer >
            <p>&copy; @DateTime.Now.Year - Bruno Stano - ASP.NET.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
